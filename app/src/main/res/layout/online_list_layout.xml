<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b670d5e8"
    android:weightSum="1"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_hotmusic"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.30"
        android:background="@drawable/hotmusic"
         />

    <TextView
        android:id="@+id/tv_hotsorts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热门分类"
        android:textSize="25sp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/iv_hotmusic"
        android:layout_alignStart="@+id/iv_hotmusic" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.22">

        <Button
            android:id="@+id/bt_sorts_collect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="热歌"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bt_shape"/>

        <Button
            android:id="@+id/bt_sorts_hot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="销量"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#000000"
            android:background="@drawable/bt_shape"
            android:layout_alignBaseline="@+id/bt_sorts_hot"
            android:layout_alignBottom="@+id/bt_sorts_hot" />

        <Button
            android:id="@+id/bt_sort_sell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="民谣"
            android:textSize="15sp"
            android:textColor="#000000"
            android:background="@drawable/bt_shape"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignBaseline="@+id/bt_sorts_hot"
            android:layout_alignBottom="@+id/bt_sorts_hot" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.22">

        <Button
            android:id="@+id/bt_sorts_chinese"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="大陆"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bt_shape"/>

        <Button
            android:id="@+id/bt_sots_hkntw"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="港台"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#000000"
            android:background="@drawable/bt_shape"
            android:layout_alignBaseline="@+id/bt_sorts_hot"
            android:layout_alignBottom="@+id/bt_sorts_hot" />

        <Button
            android:id="@+id/bt_sort_rock"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="摇滚"
            android:textSize="15sp"
            android:textColor="#000000"
            android:background="@drawable/bt_shape"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignBaseline="@+id/bt_sorts_hot"
            android:layout_alignBottom="@+id/bt_sorts_hot" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.22">

        <Button
            android:id="@+id/bt_sorts_west"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="欧美"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bt_shape"/>

        <Button
            android:id="@+id/bt_sorts_japan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="日本"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#000000"
            android:background="@drawable/bt_shape"
            android:layout_alignBaseline="@+id/bt_sorts_hot"
            android:layout_alignBottom="@+id/bt_sorts_hot" />

        <Button
            android:id="@+id/bt_sort_korea"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="韩国"
            android:textSize="15sp"
            android:textColor="#000000"
            android:background="@drawable/bt_shape"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignBaseline="@+id/bt_sorts_hot"
            android:layout_alignBottom="@+id/bt_sorts_hot" />
    </LinearLayout>


</LinearLayout>